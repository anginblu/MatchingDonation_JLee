<h4>List of all active Challenges</h4>
  <% @challenges.where(active: true).each do |challenge| %>
    <li>
      <%= link_to "#{challenge.email}", challenge %> for <%= number_to_currency challenge.amount %>
    </li>
  <% end %>

<h4>List of completed Challenges</h4>
  <% @challenges.where(active: false).each do |challenge| %>
    <li>
      <%= link_to "#{challenge.email}", challenge %> for <%= number_to_currency challenge.amount %>
    </li>
<% end %>
